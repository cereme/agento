{
  "name": "Agento",
  "version": "0.2.0",
  "description": "Agento는 산업기능/전문연구 요원 정보를 구인 사이트에서 볼 수 있게 도와주는 브라우저 확장프로그램입니다. 😎",
  "manifest_version": 2,
  "author": "cereme",
  "permissions": [
      "*://*.wanted.co.kr/*",
      "*://wanted.co.kr/*",
      "*://*.jobplanet.co.kr/*",
      "*://jobplanet.co.kr/*",
      "*://*.rocketpunch.com/*",
      "*://rocketpunch.com/*",
      "*://*.mma.go.kr/*",
      "tabs",
      "storage"
  ],
  "icons": {
    "128": "dist/icon128.png"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [{
      "matches": [
          "*://*.wanted.co.kr/*",
          "*://wanted.co.kr/*",
          "*://*.jobplanet.co.kr/*",
          "*://jobplanet.co.kr/*",
          "*://*.rocketpunch.com/*",
          "*://rocketpunch.com/*"
      ],
      "all_frames": true,
      "js": [
          "dist/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
      "default_popup": "dist/index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}